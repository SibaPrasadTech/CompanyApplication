@model CompanyApplication.ViewModels.EmployeeViewModel
<h2>Employee Details</h2>
<hr />

@using (@Html.BeginForm("SaveEmployee", "Employee"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Employee.Name)
        @Html.TextBoxFor(m => m.Employee.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Employee.Age)
        @Html.TextBoxFor(m => m.Employee.Age, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Employee.Salary)
        @Html.TextBoxFor(m => m.Employee.Salary, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Employee.DepartmentId)
        @Html.DropDownListFor(m => m.Employee.DepartmentId, new SelectList(Model.Department, "DepartmentId", "DeptName"), "Select Department", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Employee.EmployeeId)

    @*@Html.HiddenFor(m => )*@

    string c = @Model.Employee.EmployeeId > 0 ? "Update" : "Save";

    <button type="submit" class="btn btn-primary">   @c    </button>

}
