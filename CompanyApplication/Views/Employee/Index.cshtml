@model IEnumerable<CompanyApplication.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}


<!DOCTYPE html>

<html>
<head>
    @*<meta name="viewport" content="width=device-width" />*@
    @*<title>Employee View title</title>*@
</head>
<body>
    <h3> <strong>Employee List</strong></h3>
    <button type="button" class = "btn btn-secondary btn-outline-success">
        @Html.ActionLink("Add Employee","AddEmployee", "Employee", null, new { @class = "link-dark" })
    </button>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m=>m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Age)</th>
                <th>@Html.DisplayNameFor(m => m.Salary)</th>
                <th>@Html.DisplayNameFor(m => m.Department.DeptName)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Salary</td>
                    <td>@employee.Department.DeptName</td>
                    <td>@Html.ActionLink("Edit", "EditEmployee", "Employee" , new { id = employee.EmployeeId , name = employee.Name}, new {@class= "nav-link" })</td>
                    <td>@Html.ActionLink("Delete", "DeleteEmployee", "Employee", new { id = employee.EmployeeId, name = employee.Name }, new {@class= "nav-link" })</td>
                </tr>
            }
            </tbody>
    </table>
</body>
</html>
